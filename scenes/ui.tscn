[sub_resource type="GDScript" id="GDScript_wt86j"]
resource_name = "starting_round"
script/source = "extends Label

@export var time_controller : TimeControl

var round_number : int : 
	set(value):
		round_number = value
		

func announce_new_round(ticks : int):
	visible = true
	text = \"STARTING ROUND: %d \" % [round_number]
	await time_controller.wait_for(6)
	visible = false

func set_round_number(value):
	round_number = value
"

